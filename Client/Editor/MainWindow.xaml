<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="SendDataTextBox" Height="30" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBox.Margin>100 30</TextBox.Margin>
            <TextBox.Text>Data to send</TextBox.Text>
        </TextBox>
        <Button Name="DataSend" Height="20" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Click="DataSend_OnClick">
            <Button.Margin>50 35</Button.Margin>
            <Button.Content>Send</Button.Content>
        </Button>
    </Grid>
</Window>