<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Editor.Views.MainMenu"
        Title="MainMenu">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Username -->
            <RowDefinition Height="Auto" /> <!-- Email -->
            <RowDefinition Height="Auto" /> <!-- Password -->
            <RowDefinition Height="Auto" /> <!-- Remember me -->
            <RowDefinition Height="Auto" /> <!-- Submit button -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ip" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Name="IpTextBox" HorizontalAlignment="Left" Width="150" />

        <TextBlock Grid.Row="2" Text="Port" VerticalAlignment="Center" Margin="0 10 0 0" />
        <TextBox Grid.Row="3" Name="PortTextBox" HorizontalAlignment="Left" Width="100"
                 TextChanging="PortTextBox_OnTextInput" />

        <Button Grid.Row="4" Content="Connect" Margin="0 10 0 0" Click="Connect_OnClick"></Button>
    </Grid>

</Window>